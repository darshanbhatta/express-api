{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2017",
        "strict": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "./src/*",
            ],
            "*": [
                "node_modules/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
}