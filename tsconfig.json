{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitAny": false,
        "allowJs": false,
        "sourceMap": false,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "./src/*",
            ],
            "@/*": [
                "./src/*",
            ],
            "*": [
                "node_modules/*"
            ]
        },
    },
    "include": [
        "@types/**/*",
        "src/**/*",
        "tests/**/*"
, "jest.config.ts"    ],
}